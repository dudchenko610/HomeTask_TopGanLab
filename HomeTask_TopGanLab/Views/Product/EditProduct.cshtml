@model Product

<center>

        <h2>Редактирование продукта</h2>

        <form class="form-signin" method="post" asp-controller="Product" asp-action="EditProduct">
            <div asp-validation-summary="ModelOnly"></div>

            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group col-sm-4 row">
                <label asp-for="Name"></label><br />
                <input asp-for="Name" class="form-control" placeholder="Имя продукта" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-group col-sm-4 row">
                <label asp-for="Size"></label><br />
                <input asp-for="Size" class="form-control" placeholder="Количество продукта" />
                <span asp-validation-for="Size"></span>
            </div>


            <div class="form-group col-sm-4 row">
                <label>Тип размера</label><br />

                <select class="form-control" asp-for="@Model.SizeType" asp-items="@EnumExtensions.GetEnumDescriptions<ProductSizeType>()">
                </select>


            </div>

            <div class="form-group">
                <button class="btn btn-primary" type="submit">Сохранить</button>
            </div>

        </form>

    </center>